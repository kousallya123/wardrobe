<body>
  
<form action="/edit_address" method="post">
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationDefault01">Name</label>
      <input type="text" class="form-control" id="validationDefault01" name="name" value="{{address.name}}">
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault02">Address</label>
      <input type="text" class="form-control" id="validationDefault02" name="address"  value="{{address.address}}">
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault01">Pincode</label>
      <input type="text" class="form-control" id="validationDefault01"name="pincode"value="{{address.pincode}}" >
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault02">City</label>
      <input type="text" class="form-control" id="validationDefault02" name="city" value="{{address.city}}">
    </div>
  </div>
 <input type="text" name="id" value="{{address.id}}" hidden>
 <input type="text" name="user" value="{{address.user}}"hidden>
 
  <button class="btn btn-primary" type="submit">Edit Address</button>

</form>
